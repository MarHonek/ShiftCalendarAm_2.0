<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:alpha="0.8"
        android:background="@drawable/shadow" />

    <LinearLayout
        android:id="@+id/layout_scheme_group_choose"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/shadow">



        <Button
            android:id="@+id/button_scheme_choose_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/md_white_1000"
            android:background="@color/colorPrimary"
            android:text="A"
            android:onClick="chooseGroup"/>

        <Button
            android:id="@+id/button_scheme_choose_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/md_white_1000"
            android:text="B"
            android:onClick="chooseGroup"/>

        <Button
            android:id="@+id/button_scheme_choose_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/md_white_1000"
            android:text="C"
            android:onClick="chooseGroup"/>

        <Button
            android:id="@+id/button_scheme_choose_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/md_white_1000"
            android:text="D"
            android:onClick="chooseGroup"/>

    </LinearLayout>

</RelativeLayout>